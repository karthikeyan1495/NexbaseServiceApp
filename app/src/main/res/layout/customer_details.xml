<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="customerDetailsVm"
            type="com.spider.star.nexbase.customerdetails.viewmodal.CustomerDetailsVm" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3985a5">

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                          <ImageView
                              android:layout_width="35dp"
                              android:layout_height="25dp"
                              android:layout_gravity="center"
                              android:src="@drawable/ic_left_arrow"
                              android:onClick="@{customerDetailsVm::OnClickBackPress}"/>


                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/customer_details"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            app:font="@{@string/pt_sans_web_text_regular}"/>

                    </LinearLayout>


                </android.support.v7.widget.Toolbar>


            </android.support.design.widget.AppBarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        app:font="@{@string/pt_sans_web_text_regular}"
                        android:text="@string/company_name"/>


                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text=":"/>


                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        app:font="@{@string/pt_sans_web_text_regular}"
                        android:text="Abc Info Tech"/>



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="@string/name"
                        app:font="@{@string/pt_sans_web_text_regular}"/>


                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text=":"/>


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:text="Manoj"
                        app:font="@{@string/pt_sans_web_text_regular}"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="@string/mobile_no"
                        app:font="@{@string/pt_sans_web_text_regular}"/>


                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text=":"/>


                    <TextView
                        android:id="@+id/mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:text="9856791234"
                        app:font="@{@string/pt_sans_web_text_regular}"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="@string/email_id"
                        app:font="@{@string/pt_sans_web_text_regular}"/>


                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text=":"/>


                    <TextView
                        android:id="@+id/email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:text="Abcd@gmail.com"
                        app:font="@{@string/pt_sans_web_text_regular}"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="@string/address"
                        app:font="@{@string/pt_sans_web_text_regular}"/>


                    <TextView

                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text=":"/>


                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        app:font="@{@string/pt_sans_web_text_regular}"
                        android:text="55, Dubai main street, Dubai."/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="@string/tracking_id"
                        app:font="@{@string/pt_sans_web_text_regular}"/>


                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text=":"/>


                    <TextView
                        android:id="@+id/tracking_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="#34495E"
                        android:text="02334567"
                        app:font="@{@string/pt_sans_web_text_regular}"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="@string/compliant"
                        app:font="@{@string/pt_sans_web_text_regular}"/>


                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text=":"/>


                    <TextView
                        android:id="@+id/compliant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        app:font="@{@string/pt_sans_web_text_regular}"
                        android:text="Laptop Service, RAM"/>


                </LinearLayout>


                <TextView
                    android:id="@+id/get_direction"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="@string/get_direction"
                    android:gravity="center"
                    android:onClick="@{customerDetailsVm::onClickgetDirction}"
                    android:background="@drawable/cornor_roundbutton"
                    app:font="@{@string/pt_sans_web_text_regular}"/>




                <TextView
                    android:id="@+id/update_status"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="@string/update_status"
                    android:gravity="center"
                    android:onClick="@{customerDetailsVm::onClickUpdateStatus}"
                    android:background="@drawable/cornor_roundbutton"
                    app:font="@{@string/pt_sans_web_text_regular}"/>


            </LinearLayout>


        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>

</layout>